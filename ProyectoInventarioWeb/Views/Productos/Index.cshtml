
@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>
<input type="button" value="Nuevo" onclick="document.location.href='@Url.Content("~/Productos/New")'" />
<input type="button" value="Refrescar" onclick="Get()" />
<div id="divLista">

</div>

<script>
    urlGet = "Productos/List";
    Get();
    function Get() {
        fetch(urlGet)
            .then(function (response) {
                return response.text();
            })
            .then((data) => {
                document.getElementById("divLista").innerHTML = data;
            })
    }

    //Eliminar
    function jsDelete(id) {
        fetch("@Url.Content("~/Productos/Delete")", {
            method: "POST",
            body: JSON.stringify({
                Id : id
            }),
            headers: {
                "Accept": "application/json",
                "Content-Type": "application/json"
            }
        }).then(function (response) {
            if (response.ok) {
                return response.text();
            } else {
                alert("Erro al Ejecutar ");
            }
        }).then(function (Data) {
            if (Data != "1") {
                alert(Data);
            } else {
                Get();
            }
        })
    }
</script>

