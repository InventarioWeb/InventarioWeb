@model ProyectoInventarioWeb.Models.ViewModel.CategoriasViewModel
@{
    ViewBag.Title = "New";
    Layout = null;

}

@Styles.Render("~/Content/style.css")
<form>
    <div class="contenedor-inputs">
        <div class="form-group">
            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, new { id = "Nombre", @class = "input" })
        </div>
    </div>
</form>

<script>
    var url = "@Url.Content("~/Categorias/Save")";
    function jsAdd() {
        fetch(url, {
            method: "POST",
            body: JSON.stringify({
                Nombre: document.getElementById("Nombre").value
            }),
            headers: {
                "Accept": "application/json",
                "Content-Type": "application/json"
            }
        }).then(function (response) {
            if (response.ok) {
                return response.text();
            } else {
                alert("Erro al Ejecutar ");
            }
        }).then(function (Data) {
            if (Data != "1") {
                alert(Data);
            } else {
                document.location.href = "@Url.Content("~/Categorias")";
            }
        })
    }
</script>

