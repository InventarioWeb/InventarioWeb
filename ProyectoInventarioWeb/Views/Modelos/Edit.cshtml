@using ProyectoInventarioWeb.Models.ViewModel
@model ModelosViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>@ViewBag.Title</h2>

<form>
    <div class="row">
        @Html.HiddenFor(d => d.ID, new { id = "id" })
        <div class="form-group">
            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, new { id = "Nombre" })
        </div>

        <input type="button" value="Guardar" onclick="jsEdit()" />
    </div>
</form>

<script>
    var url = "@Url.Content("~/Modelos/Update")";
    function jsEdit() {
        fetch(url, {
            method: "POST",
            body: JSON.stringify({
                Nombre: document.getElementById("Nombre").value,
                ID : document.getElementById("id").value
            }),
            headers: {
                "Accept": "application/json",
                "Content-Type": "application/json"
            }
        }).then(function (response) {
            if (response.ok) {
                return response.text();
            } else {
                alert("Erro al Ejecutar ");
            }
        }).then(function (Data) {
            if (Data != "1") {
                alert(Data);
            } else {
                document.location.href = "@Url.Content("~/Modelos")";
            }
        })
    }
</script>

